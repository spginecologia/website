{
  "compilerOptions": {
    // Using "baseUrl" allows you to use absolute paths
    "baseUrl": ".",
    // Using "paths" allows you to configure module path aliases
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/forms/*": ["forms/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/contexts/*": ["contexts/*"],
      "@/services/*": ["services/*"],
      "@/schemas/*": ["schemas/*"]
    }
  }
}
